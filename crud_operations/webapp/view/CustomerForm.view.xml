        <content>

        <sap.ui.layout.form:SimpleForm editable="true" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" id="CustomerForm">
            <sap.ui.layout.form:content>
                <sap.ui.core:Title id="xsalesFormTitle" text="Sales Form XML"/>
                
                <Label id="xsLabel1" text="Customer Id" />
                <Input id="Cno" type="Text" width="100%" placeholder="123456" value="{cf>/Cno}"/>
                
                <Label id="xsLabel2" text="Name" />
                <Input id="CName1" type="Text" width="100%" placeholder="John Doe" value="{cf>/Name1}"/>

                <Label id="xsLabel3" text="City" />
                <Input id="CCityy" type="Text" width="100%" placeholder="Bengaluru" value="{cf>/Cityy}"/>

                <Label id="xsLabel4" text="Country" />
                <Input id="CCtry" type="Text" width="100%" placeholder="India" value="{cf>/Ctry}"/>

                <!-- <Button id="CSubmit" type="Accept" text="Submit" icon="sap-icon://save" press=".onCreateCustomer"/> -->
            </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>

    </content>

    <footer>
        <Toolbar id="CustomerFormFooter">
            <ToolbarSpacer id="CustomerFormFooterSpacer"/>
            <Button 
                id="CreateCustomerButton"
                text="CreateCustomer" 
                type="Accept"
                icon="sap-icon://save"
                press=".onCreateCustomer" /> 
        </Toolbar>
    </footer>
        
