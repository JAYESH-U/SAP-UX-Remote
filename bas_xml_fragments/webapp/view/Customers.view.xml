                <sap.ui.core:Title text="Title" id="idTitle"/>
    
                <Label text="Customer No" id="lblCus"/>
                <Input width="100%" id="input0" value="{s>/id}"/>
    
                <Label id="_IDGenLabel" ></Label>
                <core:Fragment id="idCustAddress" fragmentName="ibm.sap.training.basxmlfragments.view.Address" type="XML" />	         
             
            </sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
    </content>
    <content>
        <core:Fragment id="idRadioGroups" fragmentName="ibm.sap.training.basxmlfragments.view.Radios" type="XML" />	         
    </content>
    
    </Page>
</mvc:View>