<mvc:View controllerName="ibm.sap.training.validations.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <Input id="inp1" description="age" value = "{ path : 'j>/age',
                                        type :'sap.ui.model.type.Integer' ,
                                        constraints : { minimum : 1, maximum:100 } }" />
    <Input id="inp2" description="discount" value = "{ path : 'j>/discount' }"
                                      
                     visible="{= ${j>/discount} > 5 }"/>
    <Input id="name" description="Name" value = "{j>/name}"/>
    <Button id="b1" text ="save" press="onSave" enabled="{= ${j>/name} !== undefined &amp;&amp;  ${j>/name}.length > 0 }"/>

    </Page>
</mvc:View>